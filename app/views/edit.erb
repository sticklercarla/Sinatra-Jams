<h1>Edit Artist Page</h1>

<form method="post" action="/artists/<%= @artist.id %>">
    <input type="hidden" name="_method" value="PATCH">
    <label for="artist-name">Name</label>
    <input type="text" name="artist[name]" id="artist-name" placeholder="<%= @artist.name %>" value="<%= @artist.name %>">
    <label for="artist-age">Age</label>
    <input type="number" name="artist[age]" id="artist-age" placeholder="<%= @artist.age %>" value="<%= @artist.age %>"> 
    <label for="artist-bio">Bio</label>
    <input type="text" name="artist[bio]" id="artist-bio" placeholder="<%= @artist.bio %>" value="<%= @artist.bio %>">
    <input type="submit" value="Submit!">

</form